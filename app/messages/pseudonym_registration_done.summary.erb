<% p = asset.is_a?(Pseudonym) ? asset : asset.pseudonym %>
<% define_content :link do %>
  <%= profile_url %>
<% end %>

<% define_content :subject do %>
  <%= t :subject, "On Guard Registration Complete" %>
<% end %>

<%= t :body, "You have been registered for an On Guard account at %{account}!  ", :account => p.account.display_name %>

<%= t :link_message, "Visit the following url to access your account:" %>
<%= content :link %>
